#### modeling a bank account system
class BankAccount:  ### creating a class named BankAccount
    ### constructor method to initialize owner and balance attributes
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance

    ### method to deposit money into the account
    def deposit(self, amount):
        self.balance += amount
        print(f"{amount} deposited to the account. New balance is {self.balance}")

    ### method to withdraw money from the account
    def withdraw(self, amount):
        if amount > self.balance:
            print("Insufficient funds")
        else:
            self.balance -= amount
            print(f"{amount} withdrawn from the account. New balance is {self.balance}")

    ### method to display account information
    def display_info(self):
        print(f"Account owner: {self.owner}")
        print(f"Account balance: {self.balance}")

### example usage
if __name__ == "__main__":
    account1 = BankAccount("roshik", 10000)
    account1.display_info()
    account1.deposit(5000)
    account1.withdraw(3000)
    account1.display_info()
# Output:
# Account owner: roshik
# Account balance: 10000
# 5000 deposited to the account .New balance is  15000
# 3000 withdrawn from the account.New  balance is  12000
# Account owner: roshik
# Account balance: 12000
